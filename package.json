{
  "name": "@humanwhocodes/social-changelog",
  "version": "0.2.1",
  "description": "Generates social posts from a GitHub release changelog.",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "social-changelog": "dist/bin.js"
  },
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "!(*.js)": [
      "prettier --write --ignore-unknown"
    ]
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/nzakas"
  },
  "scripts": {
    "build": "tsc && node -e \"fs.copyFileSync('src/prompt.txt', 'dist/prompt.txt');\"",
    "lint": "eslint src/ tests/",
    "fmt": "prettier --write .",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "test:unit": "mocha --exit tests/**/*.*",
    "test:jsr": "npx jsr@latest publish --dry-run",
    "test": "npm run test:unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/humanwhocodes/social-changelog.git"
  },
  "keywords": [
    "release",
    "ai",
    "openai",
    "gpt",
    "github",
    "changelog",
    "social",
    "twitter",
    "mastodon",
    "linkedin",
    "facebook"
  ],
  "author": "Nicholas C. Zaks",
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "^22.13.4",
    "eslint": "^9.0.0",
    "lint-staged": "15.4.3",
    "mentoss": "^0.5.1",
    "mocha": "^11.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "yorkie": "2.0.0"
  }
}
